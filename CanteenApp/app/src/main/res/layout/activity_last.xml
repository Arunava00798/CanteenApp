<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".lastActivity"
    android:weightSum="12"
    >


    <LinearLayout
        android:layout_weight="1.5"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="RECEIPT"
            android:layout_weight="1"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"  />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"></LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:weightSum="5"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight=".4"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER ID"
                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="15sp"
                    android:id="@+id/userid"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"

                    />

                <TextView

                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userid"
                    android:layout_centerHorizontal="true"
                    android:text="TRANSACTION ID"
                    android:id="@+id/tid"
                    android:textAlignment="center"
                    android:textSize="15sp"

                    />

                <TextView

                    style="@style/Base.TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tid"
                    android:layout_centerHorizontal="true"
                    android:text="BILL NO"
                    android:textAlignment="center"
                    android:textSize="15sp"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_uid"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="ST9345HJ"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/txt_tid"
                    android:layout_below="@+id/txt_uid"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="ST9345HJ"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:gravity="center"
                />

                <TextView
                    android:id="@+id/txt_bno"
                    android:layout_below="@+id/txt_tid"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="ST9345HJ"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:gravity="center"
                    />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:weightSum="5"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:text="DATE"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="2"
                android:layout_marginLeft="15dp"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="30/12/2019"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="24:23:55 pm"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:weightSum="5"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Order Details :"
                android:textColor="#000"
                android:gravity="bottom"
                android:textSize="18dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>


        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:weightSum="5"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight=".4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/payment"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="15dp"
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3">

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Rs 0.0"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:gravity="left"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnhome"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_toRightOf="@+id/txt_total"
                    android:text="HOME"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnback"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_toRightOf="@+id/btnhome"
                    android:text="PRINT"
                    />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>


</LinearLayout>